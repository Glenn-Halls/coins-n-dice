<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/button_silver_coin"
        app:layout_constraintEnd_toEndOf="@+id/button_silver_coin"
        app:layout_constraintStart_toStartOf="@+id/button_silver_coin"
        app:srcCompat="@drawable/gold_coin_n" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/button_red_die"
        app:layout_constraintEnd_toEndOf="@+id/button_red_die"
        app:layout_constraintStart_toStartOf="@+id/button_red_die"
        app:srcCompat="@drawable/die_red_0" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/button_black_die"
        app:layout_constraintEnd_toEndOf="@+id/button_black_die"
        app:layout_constraintStart_toStartOf="@+id/button_black_die"
        app:srcCompat="@drawable/die_black_0" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/button_gold_coin"
        app:layout_constraintEnd_toEndOf="@+id/button_gold_coin"
        app:layout_constraintStart_toStartOf="@+id/button_gold_coin"
        app:srcCompat="@drawable/silver_coin_n" />

    <Button
        android:id="@+id/button_silver_coin"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginBottom="40dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:text="@string/coin_2_button"
        android:textSize="14sp"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_gold_coin" />

    <Button
        android:id="@+id/button_black_die"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginBottom="40dp"
        android:text="@string/black_die_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_red_die"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/button_red_die"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginBottom="40dp"
        android:text="@string/red_die_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_gold_coin"
        app:layout_constraintStart_toEndOf="@+id/button_black_die" />

    <Button
        android:id="@+id/button_gold_coin"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginBottom="40dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:text="@string/coin_1_button"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_silver_coin"
        app:layout_constraintStart_toEndOf="@+id/button_red_die"
        tools:ignore="DuplicateSpeakableTextCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>